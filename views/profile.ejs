<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
 
   
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
 
    <div class="portfolio">
        <div class="profile-pic">
            <img src="https://cdn.vectorstock.com/i/1000x1000/54/41/young-and-elegant-woman-avatar-profile-vector-9685441.webp">
        </div>
        <h1><%=user.username%></h1>
        <p>@<%=user.username%></p>
        <!-- <p>some tagline</p>
        <p>some description</p> -->
        <a href="/logout" class="btn">Logout</a>
        <a href="/click" class="btn">Post</a>
        <a href="/feed" class="btn">feed</a>
        <!-- <form action="/upload" method="post" enctype="multipart/form-data">
          <input type="text" name="filecaption" placeholder="some caption">
          <input type="file" name="file">
          <button type="submit">Upload</button>
        </form> -->
    </div>
    
    <div class="container">
      <div class="cards-flex">
        <% user.posts.forEach(function(post){ %>
          <div class="card" >
            <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= post.imageText%></h5>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>